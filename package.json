{
  "name": "Ged",
  "version": "2.9.0",
  "description": "Ged is an app for easy draft finding",
  "repository": {
    "type": "git",
    "url": "https://github.com/Art4/Ged.git"
  },
  "main": "main.js",
  "scripts": {
    "build": "electron-builder",
    "cs": "eslint --fix src/ tests/",
    "deploy": "webpack -p --config webpack.config.js && electron-builder",
    "pack": "electron-builder --dir",
    "publish": "webpack --mode=production --config webpack.config.js && electron-builder -p always",
    "start": "env ELECTRON_IS_DEV=1 electron .",
    "test": "jasmine --config=tests/config/jasmine.json",
    "watch": "webpack --mode=development --progress --watch --config webpack.config.js",
    "webpack": "webpack --mode=development --config webpack.config.js"
  },
  "author": "Artur Weigandt",
  "license": "GPL-3.0",
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^5.15.4",
    "autoprefixer": "^10.3.2",
    "bootstrap": "^5.1.0",
    "css-loader": "^6.2.0",
    "electron": "^13.2.2",
    "electron-builder": "^22.11.7",
    "eslint": "^7.32.0",
    "jasmine": "^3.9.0",
    "jquery": "^3.6.0",
    "memfs": "^3.2.2",
    "mini-css-extract-plugin": "^2.2.0",
    "node-sass": "^6.0.1",
    "popper.js": "^1.16.1",
    "postcss-loader": "^6.1.1",
    "precss": "^4.0.0",
    "sass-loader": "^12.1.0",
    "webpack": "^5.51.1",
    "webpack-cli": "^4.8.0"
  },
  "dependencies": {
    "commander": "^8.1.0",
    "compare-versions": "^3.6.0",
    "electron-store": "^8.0.0",
    "electron-updater": "^4.3.9"
  },
  "build": {
    "appId": "org.electron.ged",
    "win": {
      "icon": "pages/assets/img/icon-256.png"
    },
    "nsis": {
      "oneClick": true,
      "artifactName": "${productName} ${version}.${ext}",
      "deleteAppDataOnUninstall": true,
      "createDesktopShortcut": false,
      "createStartMenuShortcut": true,
      "publish": {
        "provider": "github",
        "private": false
      }
    }
  }
}
